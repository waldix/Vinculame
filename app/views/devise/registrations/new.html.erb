<div class="sign-in">
  <h2 class="form-registration">Registrate</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {class: "form-horizontal form-registration"}) do |f| %>
      <%= devise_error_messages! %>

      <div class="control-group"><%= f.label :email, class: "control-label" %>
        <div class="controls"><%= f.email_field :email, :autofocus => true, placeholder: "Escribe tu Email" %></div>
      </div>

      <div class="control-group"><%= f.label :password, class: "control-label" %>
        <div class="controls"><%= f.password_field :password, placeholder: "Escribe tu Password" %></div>
      </div>

      <div class="control-group"><%= f.label :password_confirmation, class: "control-label" %>
        <div class="controls"><%= f.password_field :password_confirmation, placeholder: "Confirma tu Password" %></div>
      </div>

      <div>
        <%= f.submit "Registrate", class: "btn btn-success btn-registrate" %>
        <%= render "devise/shared/links" %></div>
  <% end %>
</div>

